<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.duglegir.jagosholat.CatatanFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009688"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_bismilah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bismillah"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

        <!--Tengah-->
        <LinearLayout
            android:id="@+id/contain_isi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/my_border"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_bismilah"
            android:layout_marginBottom="15dp">

            <TextView
                android:padding="10dp"
                android:id="@+id/txt_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tanggal"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_sholat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sholat Dzuhur"
                android:textColor="#ffffff"
                android:textSize="40sp"/>
            <TextView
                android:id="@+id/txt_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="waktu"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4D000000"
                android:gravity="center">
            </LinearLayout>
        </LinearLayout>

        <!--Bawah-->
        <LinearLayout
            android:layout_below="@id/contain_isi"
            android:id="@+id/hadist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_hadist_arab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/hadis_arab_0"
                android:textSize="16sp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_hadist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/hadis_text_0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginBottom="40dp"
                />
        </LinearLayout>

        <!--Button-->
        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simpan"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:background="@drawable/submit_border"
            android:textSize="20sp" />
    </RelativeLayout>

</FrameLayout>